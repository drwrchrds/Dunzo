<h1 class="big">Add Project:</h1>
<div class="new-thing">
  <form action="<%= projects_url %>" method="POST" accept-charset="utf-8">
    <input
    type="hidden"
    name="authenticity_token"
    value="<%= form_authenticity_token %>">

    <label>New project for:
      <select name="project[client_id]">
        <option value="">~select client~</option>
        <%= current_user.clients.each do |client| %>
        <option
          value="<%= client.id %>"
          <%= 'selected' if @project.client_id == client.id %>>
          <%= client %>
        </option>
        <% end %>
      </select>
    </label>

    <br>
    <label>Name:
      <input type="text" name="project[name]" value="<%= @project.name %>">
    </label>
  <br>
    <label>Description:
      <textarea name="project[description]"><%= @project.description %></textarea>
    </label>
  <br>
    <!-- <label>Deliver by:
      <input type="date" name="project[due_date]" value="">
    </input>
  <br> -->
    <button class="btn">Add Project</button>
  </form>
</div>